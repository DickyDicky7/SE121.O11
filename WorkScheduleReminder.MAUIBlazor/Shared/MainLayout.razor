@inherits LayoutComponentBase

<Layout ChildContent="@Body" DeviceType="ChooseDeviceType()" />

@code
{

	private Helper.DeviceType ChooseDeviceType()
	{
		if (DeviceInfo.Current.Idiom == DeviceIdiom.Phone || DeviceInfo.Current.Idiom == DeviceIdiom.Tablet)
		{
			return Helper.DeviceType.Mobile;
		}
		if (DeviceInfo.Current.Idiom == DeviceIdiom.Desktop)
		{
			return Helper.DeviceType.Desktop;
		}
			return Helper.DeviceType.Unknown;
	}

}