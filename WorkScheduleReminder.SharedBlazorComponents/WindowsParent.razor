
<MudPaper Class="d-flex flex-row"
		  Elevation="0"
		  Height="100vh" Width="100vw" MinHeight="400px" MinWidth="600px">
	@* Sidebar *@
	<MudPaper Class="d-flex flex-column gap-2 pa-2
					border-solid border-1"
			  Elevation="0"
			  Height="100%"
			  Width="200px">
		<MudPaper Class="d-flex flex-row gap-3 align-center"
				  Elevation="0">
			<MudAvatar>
				<MudImage Src="@Helper.GetResource("/images/catsayhello.png")" />
			</MudAvatar>
			<MudText>
				-Name-
			</MudText>
		</MudPaper>
		<MudNavMenu Class="pa-2">
			<MudNavLink Href="/home">
				My day
			</MudNavLink>
			<MudNavLink Href="/list">
				Next 7 days
			</MudNavLink>
			<MudNavLink Href="/list">
				All my task
			</MudNavLink>
			@*for()*@
			<MudButton Class="rounded-cycle"
					   Size="Size.Small"
					   StartIcon="@Icons.Material.Filled.Add">
				Create a view
			</MudButton>
		</MudNavMenu>


	</MudPaper>

	<MudPaper Class="d-flex flex-column flex-grow-1"
			  Elevation="0"
			  Height="100%">
		@* Topbar *@
		<MudPaper Class="d-flex flex-row flex-wrap
						align-center pa-2
						border-solid border-1"
				  Elevation="0"
				  Width="100%">
			@* Toolbar1 *@
			<MudPaper Class="d-flex flex-wrap rounded-pill"
					  Elevation="0">
				<MudToolBar Class="d-flex flex-wrap gap-2 pa-1 rounded-pill">
					<MudIcon Class="rounded-cycle"
							 Size="Size.Small"
							 Icon="@Icons.Material.Filled.Today" />
					<MudText>
						Today
					</MudText>

				</MudToolBar>
			</MudPaper>
			<MudPaper Class="d-flex flex-row flex-grow-1" />
			@* Toolbar2 *@
			<MudPaper Class="d-flex flex-wrap rounded-pill"
					  Elevation="0">
				<MudToolBar Class="d-flex flex-wrap gap-2 pa-1 rounded-pill">
					<MudIconButton Class="rounded-cycle"
								   Size="Size.Small"
								   Icon="@Icons.Material.Filled.Sync" />
					<MudIconButton Class="rounded-cycle"
								   Size="Size.Small"
								   Icon="@Icons.Material.Filled.Notifications" />
					<MudIconButton Class="rounded-cycle"
								   Size="Size.Small"
								   Icon="@Icons.Material.Filled.Search" />
				</MudToolBar>
			</MudPaper>
		</MudPaper>
		@*MainScreen*@
		<MudPaper Class="d-flex flex-grow-1 pa-2
						align-self-center"
				  Elevation="0"
				  Width="100%">
			@MainChildContent
		</MudPaper>
	</MudPaper>
</MudPaper>

@code {
	[Parameter]
	public RenderFragment? MainChildContent { get; set; }
}
