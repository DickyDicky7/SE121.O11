<MudPaper Class="d-flex flex-row flex-wrap gap-2 pa-2 align-center"
		  Elevation="0">
	<MudIcon Class="rounded-cycle"
			 Icon="@Icon"
			 Size="Size.Large"
			 Color="Color.Info" />
	<MudText Style="font-weight:bold;font-size:x-large"
			 Color="Color.Info">
		@Name
	</MudText>
</MudPaper>

@code
{
	[Parameter]
	public string? Name { get; set; }
	[Parameter]
	public string? Icon { get; set; }
}
