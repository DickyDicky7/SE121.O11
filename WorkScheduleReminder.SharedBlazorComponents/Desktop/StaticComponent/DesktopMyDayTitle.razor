<MudPaper Class="flex-wrap pa-2 align-center"
          Style="background-color:transparent;"
          Elevation="0">
    <MudText Style="font-weight:bold;font-size:xx-large"
             Color="Color.Info">
        @Greeting@Name
    </MudText>
</MudPaper>

@code {
    [Parameter]
    public string Name { get; set; } = "Master";
    private string Greeting { get; set; } = string.Empty;
    protected override void OnInitialized()
    {
        if (DateTime.Now.Hour < 12)
        {
            Greeting = "Good morning, ";
        }
        else if (DateTime.Now.Hour >= 12 && DateTime.Now.Hour < 18)
        {
            Greeting = "Good afternoon, ";
        }
        else if (DateTime.Now.Hour >= 18 && DateTime.Now.Hour < 22)
        {
            Greeting = "Good evening, ";
        }
        else
        {
            Greeting = "Good night, ";
        }
        base.OnInitialized();
    }
}
