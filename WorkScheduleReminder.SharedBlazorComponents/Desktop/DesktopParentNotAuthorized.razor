@inject NavigationManager NavigationManager

@switch (RenderComponentType)
{
	case ComponentType.LogIn:
		       <DesktopLogIn  NotifySignUpClicked="OnSignUpClicked" 
							  NotifyForgotPasswordClicked="OnForgotPasswordClicked"/>
		 break;

	case ComponentType.SignUp:
		       <DesktopSignUp NotifyBack__Clicked="OnBack__Clicked" />
		 break;
	case ComponentType.ForgotPassword:
			   <DesktopForgotPassword NotifyBack__Clicked="OnBack__Clicked" />
		 break;
}

@code
{

	public enum ComponentType { LogIn, SignUp, ForgotPassword };
	public      ComponentType RenderComponentType { get; set; }
	=           ComponentType . LogIn;

	public void OnSignUpClicked() => RenderComponentType = ComponentType.SignUp;
	public void OnBack__Clicked() => RenderComponentType = ComponentType. LogIn;
	public void OnForgotPasswordClicked() => RenderComponentType = ComponentType.ForgotPassword;
}
