<MudPaper Class="d-flex flex-column gap-5 pa-2 align-center"
          Style="border-radius:20px"
          Elevation="0"
          Width="400px">
    <MudPaper Class="d-flex flex-column gap-2 align-center"
              Elevation="0"
              Width="100%">
        <MudIcon Size="Size.Large"
                 Color="Color.Error"
                 Icon="@Icons.Material.Filled.Warning" />
        <MudText Align="Align.Center"
                 Style="font-size:larger;font-weight:bold">
            @Title
        </MudText>
    </MudPaper>
    <MudButton Class="rounded-pill"
               FullWidth="true"
               Color="Color.Error"
               Variant="Variant.Filled"
               OnClick="Event">
        <MudText>
            @Action
        </MudText>
    </MudButton>
</MudPaper>

@code
{
    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object>? AdditionalAttributes { get; set; }
    [Parameter]
    public string Title { get; set; } = string.Empty;
    [Parameter]
    public string Action { get; set; } = string.Empty;
    [Parameter]
    public EventCallback Event { get; set; }

    public void DefaultEvent()
    {

    }
}
