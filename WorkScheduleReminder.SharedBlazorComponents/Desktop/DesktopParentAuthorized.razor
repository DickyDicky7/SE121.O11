@using WorkScheduleReminder.SharedBlazorComponents.Desktop.Popup;
@using WorkScheduleReminder.SharedBlazorComponents.Desktop.SubMenu;
<MudPaper Class="d-flex flex-row"
		  Elevation="0"
		  Height="100vh" Width="100vw" MinHeight="400px" MinWidth="600px">
	@* Sidebar *@
	<MudPaper Class="d-flex flex-column gap-2 pa-2
					border-solid border-1"
			  Elevation="0"
			  Height="100%"
			  Width="200px">
		<DesktopBarSide @bind-Name="ActiveName" @bind-Icon="ActiveIcon" @bind-Type="ActiveType" />
	</MudPaper>
	@*Top bar & mainscreen*@
	<MudPaper Class="d-flex flex-column flex-grow-1"
			  Elevation="0"
			  Height="100%">
		@* Topbar *@
		<MudPaper Class="d-flex flex-row flex-wrap
						align-center pa-2
						border-solid border-1"
				  Elevation="0"
				  Width="100%">
			<DesktopBarTop ActiveName="@ActiveName"
						   ActiveIcon="@ActiveIcon"
						   ActiveType="@ActiveType" />
			<MudButton Class="d-flex flex-wrap rounded-pill"
					   OnClick="(()=>{isVisible = !isVisible;})">
				@isVisible
			</MudButton>
		</MudPaper>
		@*MainScreen*@
		<MudPaper Class="d-flex pa-2 justify-content-center"
				  Elevation="0"
				  Width="100%" Height="100%">
			@* @MainChildContent *@
			@* <MudOverlay Visible="isVisible"
			DarkBackground="true"
			AutoClose="true"
			OnClick="(()=>{isVisible=!isVisible;})">
			<Invite @onclick:stopPropagation/>
			<Tag @onclick:stopPropagation EnableEdit="true"/>
			</MudOverlay> *@
		</MudPaper>
	</MudPaper>
</MudPaper>

@code
{

	[Parameter]
	public RenderFragment? MainChildContent { get; set; }

	private bool isVisible { get; set; } = false;

	public string? ActiveName { get; set; }
	public string? ActiveIcon { get; set; }
	public Helper.ViewType ActiveType { get; set; }
}
