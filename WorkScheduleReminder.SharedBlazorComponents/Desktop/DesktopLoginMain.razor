<MudPaper Class="d-flex flex-row"
		  Elevation="0"
		  Height="100vh"
		  Width="100vw"
		  MinHeight="500px"
		  MinWidth="800px">
	<MudPaper Class="d-flex justify-center"
			  Elevation="0"
			  Width="50%"
			  Height="100%">
		<MudImage Class="align-self-center"
				  Src="@Helper.GetResource("/images/catsayhello.png")"
				  Width="250" Height="250"
				  ObjectFit="ObjectFit.Contain"
				  ObjectPosition="ObjectPosition.Center" />
	</MudPaper>
	<MudPaper Class="d-flex justify-center"
			  Elevation="0"
			  Width="50%"
			  Height="100%">
		<MudPaper Class="d-flex flex-wrap align-self-center gap-2"
				  Elevation="0"
				  Width="50%">
			<MudButton Class="d-flex flex-wrap rounded-pill"
					   StartIcon="@Icons.Custom.Brands.Google"
					   FullWidth="true"
					   Size="Size.Medium"
					   Variant="Variant.Outlined"
					   OnClick="SignInWithGoogle">
				<MudText Style="font-family:inherit">
					Sign in with Google
				</MudText>
			</MudButton>
			<MudButton Class="d-flex flex-wrap rounded-pill"
					   StartIcon="@Icons.Custom.Brands.Facebook"
					   FullWidth="true"
					   Size="Size.Medium"
					   Variant="Variant.Outlined"
					   OnClick="SignInWithFacebook">
				<MudText Style="font-family:inherit">
					Sign in with Facebook
				</MudText>
			</MudButton>
			<MudLink Class="d-flex justify-center">
				<MudText Style="font-family:inherit">Why do i need to create an account ?</MudText>
			</MudLink>
		</MudPaper>
	</MudPaper>
</MudPaper>

