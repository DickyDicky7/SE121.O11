@using WorkScheduleReminder.SharedBlazorComponents.Desktop.SubMenu
<MudPaper Class="d-flex flex-row flex-wrap gap-2 pa-2"
		  Elevation="0">
	<MudMenu Class=""
			 Size="Size.Small"
			 FullWidth="false"
			 AnchorOrigin="Origin.BottomCenter"
			 TransformOrigin="Origin.TopCenter">
		<ActivatorContent>
			<MudButton Class="rounded-cycle"
					   StartIcon="@Icons.Material.Filled.Filter"
					   Size="Size.Small">
				Filter
			</MudButton>
		</ActivatorContent>
		<ChildContent>
			<MudMenuItem Class="">
				<MudMenu AnchorOrigin="Origin.CenterRight"
						 TransformOrigin="Origin.CenterLeft">
					<ActivatorContent>
						<MudButton Class="rounded-cycle"
								   StartIcon="@Icons.Material.Filled.ViewKanban"
								   Size="Size.Small">
							Boards & Sections
						</MudButton>
					</ActivatorContent>
					<ChildContent>

					</ChildContent>
				</MudMenu>
			</MudMenuItem>
			<MudMenuItem Class="">
				<MudMenu AnchorOrigin="Origin.CenterRight"
						 TransformOrigin="Origin.TopLeft">
					<ActivatorContent>
						<MudButton Class="rounded-cycle"
								   StartIcon="@Icons.Material.Filled.CalendarToday"
								   Size="Size.Small">
							Due day
						</MudButton>
					</ActivatorContent>
					<ChildContent>
						<DueDay />
					</ChildContent>
				</MudMenu>
			</MudMenuItem>
			<MudMenuItem Class="">
				<MudMenu AnchorOrigin="Origin.CenterRight"
						 TransformOrigin="Origin.CenterLeft">
					<ActivatorContent>
						<MudButton Class="rounded-cycle"
								   StartIcon="@Icons.Material.Filled.People"
								   Size="Size.Small">
							Assignees
						</MudButton>
					</ActivatorContent>
					<ChildContent>

					</ChildContent>
				</MudMenu>
			</MudMenuItem>
			<MudMenuItem Class="">
				<MudMenu AnchorOrigin="Origin.CenterRight"
						 TransformOrigin="Origin.CenterLeft">
					<ActivatorContent>
						<MudButton Class="rounded-cycle"
								   StartIcon="@Icons.Material.Filled.Tag"
								   Size="Size.Small">
							Tags
						</MudButton>
					</ActivatorContent>
					<ChildContent>
						<Tag EnableEdit=false/>
					</ChildContent>
				</MudMenu>
			</MudMenuItem>
			<MudMenuItem Class="">
				<MudMenu AnchorOrigin="Origin.CenterRight"
						 TransformOrigin="Origin.CenterLeft">
					<ActivatorContent>
						<MudButton Class="rounded-cycle"
								   StartIcon="@Icons.Material.Filled.Message"
								   Size="Size.Small">
							Messages
						</MudButton>
					</ActivatorContent>
					<ChildContent>

					</ChildContent>
				</MudMenu>
			</MudMenuItem>
		</ChildContent>
	</MudMenu>
</MudPaper>

