<MudPaper Class="d-flex flex-row flex-wrap gap-2 pa-2 align-center"
		  Elevation="0">
	<MudIcon Class="rounded-cycle"
			 Icon="@ActiveViewIcon"
			 Size="Size.Large"
			 Color="Color.Info" />
	<MudText Style="font-weight:bold;font-size:x-large;"
			 Color="Color.Info">
		@ActiveViewName
	</MudText>
</MudPaper>

@code
{
	[CascadingParameter(Name = nameof(ActiveViewName))]
	public string ActiveViewName { get; set; } = string.Empty;
	[CascadingParameter(Name = nameof(ActiveViewIcon))]
	public string ActiveViewIcon { get; set; } = string.Empty;
}
