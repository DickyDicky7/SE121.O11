@* Toolbar1 *@
<MudPaper Class="d-flex flex-row flex-wrap rounded-pill"
		  Elevation="0">
	<DesktopViewNameAndIcon Name="@ActiveName" />
	<DesktopButtonShare Type="@Type"/>
	@if (Type == Helper.ViewType.WorkspaceView)
	{
		<DesktopButtonView />
	}
	@if (Type == Helper.ViewType.CustomView || Type == Helper.ViewType.WorkspaceView)
	{
		<DesktopButtonFilter />
	}
	<DesktopButtonMore />
</MudPaper>
<MudPaper Class="d-flex flex-row flex-grow-1" />
@* Toolbar2 *@
<MudPaper Class="d-flex flex-wrap rounded-pill"
		  Elevation="0">
	<MudToolBar Class="d-flex flex-wrap gap-2 pa-1 rounded-pill">
		<MudIconButton Class="rounded-cycle"
					   Size="Size.Small"
					   Icon="@Icons.Material.Filled.Sync" />
		<MudIconButton Class="rounded-cycle"
					   Size="Size.Small"
					   Icon="@Icons.Material.Filled.Notifications" />
		<MudIconButton Class="rounded-cycle"
					   Size="Size.Small"
					   Icon="@Icons.Material.Filled.Search" />
	</MudToolBar>
</MudPaper>

@code
{
	[Parameter]
	public string ActiveName { get; set; }
	[Parameter]
	public Helper.ViewType Type { get; set; }
}
