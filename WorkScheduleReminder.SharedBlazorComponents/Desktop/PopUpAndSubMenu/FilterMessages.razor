<MudPaper @attributes=AdditionalAttributes
          Class="d-flex flex-column gap-2 pa-2"
          Style="border-radius:20px;"
          Elevation="0"
          Width="250px">
    <MudText Style="font-size:larger;font-weight:bold">
        Filter by messages
    </MudText>
    <MudPaper Class="d-flex flex-row"
              Elevation="0"
              Width="100%">
        <MudButton Class="rounded pill"
                   FullWidth="true"
                   OnClick="()=>{UnreadChecked=!UnreadChecked;}">
            <MudPaper Class="d-flex flex-row align-center justify-space-between"
                      Style="background-color:transparent"
                      Elevation="0"
                      Width="100%">
                <MudText>Unread</MudText>
                <MudCheckBox @bind-Checked=UnreadChecked
                             ReadOnly="true"
                             CheckedIcon="@Icons.Material.Filled.Check"
                             UncheckedIcon="null"
                             Size="Size.Small"
                             Color="Color.Info"
                             Dense="true"
                             DisableRipple="true" />
            </MudPaper>
        </MudButton>
    </MudPaper>
    <MudPaper Class="d-flex flex-row"
              Elevation="0"
              Width="100%">
        <MudButton Class="rounded pill"
                   FullWidth="true"
                   OnClick="()=>{MentionChecked=!MentionChecked;}">
            <MudPaper Class="d-flex flex-row align-center justify-space-between"
                      Style="background-color:transparent"
                      Elevation="0"
                      Width="100%">
                <MudText>Mention</MudText>
                <MudCheckBox @bind-Checked=MentionChecked
                             ReadOnly="true"
                             CheckedIcon="@Icons.Material.Filled.Check"
                             UncheckedIcon="null"
                             Size="Size.Small"
                             Color="Color.Info"
                             Dense="true"
                             DisableRipple="true" />
            </MudPaper>
        </MudButton>
    </MudPaper>
</MudPaper>

@code {
    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object>? AdditionalAttributes { get; set; }

    public bool UnreadChecked { get; set; } = false;
    public bool MentionChecked { get; set; } = false;
}
