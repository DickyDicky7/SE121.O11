@*Appear in workspace*@
<MudPaper Class="d-flex flex-row flex-wrap gap-2 pa-2"
		  Elevation="0">
	<MudMenu Class=""
			 ListClass=""
			 PopoverClass=""
			 Size="Size.Small"
			 FullWidth="false"
			 AnchorOrigin="Origin.BottomCenter"
			 TransformOrigin="Origin.TopCenter">
		<ActivatorContent>
			<MudButton Class="rounded-cycle"
					   StartIcon="@ActiveIcon"
					   Size="Size.Small">
				View
			</MudButton>
		</ActivatorContent>
		<ChildContent>
			<MudMenuItem Class="">
				<MudButton Class=""
						   StartIcon="@Icons.Material.Filled.ViewKanban"
						   Size="Size.Small"
						   OnClick="@(()=>{ActiveIcon=Icons.Material.Filled.ViewKanban;})">
					Kanban
				</MudButton>
			</MudMenuItem>
			<MudMenuItem Class="">
				<MudButton Class=""
						   StartIcon="@Icons.Material.Filled.GridView"
						   Size="Size.Small"
						   OnClick="@(()=>{ActiveIcon=Icons.Material.Filled.GridView;})">
					Table
				</MudButton>
			</MudMenuItem>
			<MudMenuItem Class="">
				<MudButton Class=""
						   StartIcon="@Icons.Material.Filled.CalendarToday"
						   Size="Size.Small"
						   OnClick="@(()=>{ActiveIcon=Icons.Material.Filled.CalendarToday;})">
					Calendar
				</MudButton>
			</MudMenuItem>
		</ChildContent>
	</MudMenu>
</MudPaper>
@code
{
	private string ActiveIcon { get; set; } = Icons.Material.Filled.ViewKanban;
}
