@namespace WorkScheduleReminder.SharedBlazorComponents.Mobile_

@switch (RenderComponentType)
{
	case ComponentType.LogIn:
                <MobileLogIn NotifySignUp________Clicked="OnSignUp________Clicked"
                             NotifyForgotPasswordClicked="OnForgotPasswordClicked" />
         break;

	case ComponentType.SignUp:
                <MobileSignUp         NotifyBackClicked="OnBackClicked" />
         break;

	case ComponentType.ForgotPassword:
                <MobileForgotPassword NotifyBackClicked="OnBackClicked" />
         break;
}

@code
{

	public enum ComponentType { LogIn, SignUp, ForgotPassword };
	public      ComponentType RenderComponentType { get; set; }
	=           ComponentType . LogIn;

	public void OnBackClicked() => RenderComponentType = ComponentType.LogIn;
	public void OnSignUp________Clicked() => RenderComponentType = ComponentType.SignUp;
	public void OnForgotPasswordClicked() => RenderComponentType = ComponentType.ForgotPassword;

}
