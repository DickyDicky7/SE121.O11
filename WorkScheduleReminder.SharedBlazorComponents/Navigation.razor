<MudAppBar Color="Color.Transparent"
		   Fixed="false"
		   Elevation="0"
		   Dense="false">

	<MudIconButton Icon="@Icons.Material.Filled.Menu"
				   Edge="Edge.Start"
				   Class="shades transparent grey-text text-darken-4"
				   OnClick="@OpenDrawer" />

	<MudDrawer @bind-Open="@open"
			   Height="100%"
			   Elevation="1"
			   Anchor="Anchor.Start"
			   Variant="DrawerVariant.Temporary">

		<MudNavMenu Color="Color.Info"
					Bordered="true"
					Class="grey-text text-darken-4">

			<MudText Typo="Typo.h6"
					 Align="Align.Start"
					 Class="px-5 py-1">
				Header
			</MudText>

			<MudDivider />

			<MudNavLink Icon="@Icons.Material.Filled.AutoAwesomeMosaic"
						Href="/1"
						Match="NavLinkMatch.All">
				Section 1
			</MudNavLink>
			<MudNavLink Icon="@Icons.Material.Filled.AutoAwesomeMosaic"
						Href="/2"
						Match="NavLinkMatch.All">
				Section 2
			</MudNavLink>
			<MudNavLink Icon="@Icons.Material.Filled.AutoAwesomeMosaic"
						Href="/3"
						Match="NavLinkMatch.All">
				Section 3
			</MudNavLink>
			<MudNavGroup @bind-Expanded="@expanded"
						 Icon="@Icons.Material.Filled.Bookmarks"
						 Title="Group 1">

				<MudNavLink Icon="@Icons.Material.Filled.AutoAwesomeMosaic"
							Href="/4"
							Match="NavLinkMatch.All">
					Section 4
				</MudNavLink>
				<MudNavLink Icon="@Icons.Material.Filled.AutoAwesomeMosaic"
							Href="/5"
							Match="NavLinkMatch.All">
					Section 5
				</MudNavLink>

			</MudNavGroup>
			<MudNavLink Icon="@Icons.Material.Filled.AutoAwesomeMosaic"
						Href="/6"
						Match="NavLinkMatch.All">
				Section 6
			</MudNavLink>

		</MudNavMenu>

	</MudDrawer>

</MudAppBar>

@code {

	private bool open = false;
	private bool expanded = false;

	private void OpenDrawer()
	{
		open = true;
	}

}
